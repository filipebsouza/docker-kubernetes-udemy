{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "filipebsouza/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128 // Em megabytes
        },
        {
            "name": "server",
            "image": "filipebsouza/multi-server",
            "hostname": "api", // Nginx Name Route
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "filipebsouza/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "filipebsouza/multi-nginx",
            "hostname": "nginx",
            "essential": true, // Se esse serviço crashar, o resto tb crasha
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"], // Isso é para poder se comunicar com outros serviços
            "memory": 128
        }
    ]
}